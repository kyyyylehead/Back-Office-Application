            </div>
            <div class="col-sm-2">
                <InputText @bind-Value="formModel.SelectedJob.ShippingCarrier" placeholder="Carrier" class="form-control mb-2"></InputText>
                <ValidationMessage For="@(()=>formModel.SelectedJob.ShippingCarrier)" />
